    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.body.html_safe %></td>
        <td><%= link_to 'Show', post,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), remote: true, class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', destroy_post_path(post),data: { confirm: 'Are you sure?'}, class: "btn btn-danger"  %></td>
        <% if Like.where(["post_id = ? and user_id = ?", post.id, current_user.id]).first  %>
           <td><%= link_to 'Unlike', like_post_path(post),method: :get, class: "btn btn-primary"%></td>
            <% else %>
           <td><%= link_to 'Like', like_post_path(post),method: :get,class: "btn btn-primary" %></td>    
            <% end %>
      </tr>
    <% end %>